{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "backend:dev-new",
			"type": "shell",
			"command": "python",
			"args": ["-m", "uvicorn", "backend.main:app", "--reload", "--port", "8000"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "backend:dev",
			"type": "shell",
			"command": "python",
			"args": ["-m", "uvicorn", "backend.main:app", "--reload", "--port", "8000"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "frontend:dev",
			"type": "shell",
			"command": "npx",
			"args": ["vite", "--port", "3000"],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		},
		{
			"label": "full:dev",
			"dependsOn": [
				"backend:dev",
				"frontend:dev"
			],
			"dependsOrder": "parallel"
		}
	]
}